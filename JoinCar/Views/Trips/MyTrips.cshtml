@using JoinCar.Database.Entities
@model IEnumerable<object>
@{
    List<Trip> userTripsList = Model.ToList()[0] as List<Trip>;
    List<Opinion> userReceivedOpinions = Model.ToList()[1] as List<Opinion>;
    List<Opinion> userIssuedOpinions = Model.ToList()[2] as List<Opinion>;
}
@{
    ViewBag.Title = "My Trips";
}

<h2>My trips</h2>
@{
    if (!userTripsList.Any())
    {
        <h4>
            You haven't created any trip yet.
            @Html.ActionLink("Create!", "Create")
        </h4>
    }
    else
    {
        @Html.Partial("_TripsTable",userTripsList)
    }
}

<h2>Received opinions</h2>
@{
    if (!userReceivedOpinions.Any())
    {
        <h4>
            You haven't received any opinions yet.
        </h4>
    }
    else
    {
        @Html.Partial("_OpinionsTable", userReceivedOpinions)
    }
}


<h2>Issued opinions</h2>
@{
    if (!userIssuedOpinions.Any())
    {
        <h4>
            You haven't issued any opinions yet.
        </h4>
    }
    else
    {
        @Html.Partial("_OpinionsTable", userIssuedOpinions)
    }
}



