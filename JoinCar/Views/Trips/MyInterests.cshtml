@model IEnumerable<JoinCar.Database.Entities.Trip>
@{
    ViewBag.Title = "My Interests";
}

<h2>My interests</h2>

@{
    if (!Model.Any())
    {
        <h4>
            You haven't joined any car yet.
            @Html.ActionLink("Join!", "Index")
        </h4>
    }
    else
    {
        @Html.Partial("_TripsTable", Model)
    }
}
